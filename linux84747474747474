apt-get update
apt-get install git build-essential autotools-dev automake autoconf libssl-dev libcurl4-openssl-dev -y
git clone https://github.com/tpruvot/ccminer
cd ccminer
./autogen.sh
./configure
make
make install

cd ./ccminer/

./ccminer -a scrypt -o stratum+tcp://us.litecoinpool.org:3333 -u linux8474.1 -p 1 -i 24
